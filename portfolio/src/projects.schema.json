{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "number"
            },
            "title": {
                "type": "string"
            },
            "date": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "image": {
                "type": "string"
            },
            "technologies": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "roles": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "links": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string"
                        },
                        "title": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "url",
                        "title"
                    ],
                    "additionalProperties": false
                }
            },
            "platforms": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "id",
            "title"
        ],
        "additionalProperties": false
    }
}